  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<div id="books-list">
	<%= render partial:'books' if @books.any? %>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_book_path,
            :class => 'btn btn-primary' if @user == current_user %>